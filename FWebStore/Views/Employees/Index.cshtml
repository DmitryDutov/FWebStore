@model IEnumerable<FWebStore.Models.Employee>

@{
    ViewData["Title"] = "Список сотрудников";
}

<div class="container">
    <h3>Сотрудники</h3>
    <a class="btn btn-default" asp-action="Edit">Создать (через метод Edit)</a>
    <br/>
    <a class="btn btn-default" asp-action="Create">Создать (через метод Create)</a>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Employees" asp-action="Details" asp-route-Id="@employee.Id">
                                <i class="fa fa-info-circle"></i>
                            </a>
                            <a asp-controller="Employees" asp-action="Edit" asp-route-Id="@employee.Id">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                        <td>@employee.Id</td>
                        <td>@employee.LastName</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.Patronumic</td>
                        <td>@employee.Age</td>
                        <td>
                            <a asp-controller="Employees" asp-action="Delete" asp-route-Id="@employee.Id" class="text-danger">
                                <i class="fa fa-trash-o"></i>
                            </a>
                            <form asp-action="DeleteConfirmed" asp-route-Id="@employee.Id">
                                <input type="submit" value="Hard Del" class="btn btn-sm btn-danger" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-danger">Сотрудников нет...</h3>
    }
    <a asp-controller="Home" asp-action="Index">На галвную</a>

</div>


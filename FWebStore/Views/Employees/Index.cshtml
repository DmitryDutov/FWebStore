@model IEnumerable<FWebStore.Models.Employee>

<div class="container">
    <h3>Сотрудники</h3>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronumic</td>
                    <td>@employee.Age</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@model IEnumerable<FWebStore.Models.Employee>

@{
    ViewData["Title"] = "Список сотрудников";
}

<div class="container">
    <h3>Сотрудники</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronumic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Details" asp-route-Id="@employee.Id">INFO</a>
                        <a asp-controller="Employees" asp-action="Edit" asp-route-Id="@employee.Id">EDIT</a>
                        <a asp-controller="Employees" asp-action="Delete" asp-route-Id="@employee.Id" class="text-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <a asp-controller="Home" asp-action="Index">На галвную</a>

</div>

